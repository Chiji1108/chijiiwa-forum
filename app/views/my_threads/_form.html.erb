<%= simple_form_for(@my_thread) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<% if @my_thread.thumbnail.attached? %>
<%= image_tag @my_thread.thumbnail%>
<% else %>
<svg style='font-size: 1.125rem; text-anchor: middle;' width="100%" height="180" xmlns="http://www.w3.org/2000/svg"
  preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: No Image">
  <title>Placeholder</title>
  <rect width="100%" height="100%" fill="#868e96" /><text x="50%" y="50%" fill="#dee2e6" dy=".3em">No Image</text>
</svg>
<% end %>
<%= f.input :thumbnail, as: :file %>
<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :description %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>